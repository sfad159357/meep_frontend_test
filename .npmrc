# 將所有依賴提升到頂層，解決依賴重複問題
shamefully-hoist=true

# 關閉嚴格的對等依賴檢查，避免版本衝突報錯
strict-peer-dependencies=false

# 自動安裝對等依賴，不需要手動安裝
auto-install-peers=true

# 使用 hoisted 模式管理依賴，所有包安裝在頂層 node_modules
node-linker=hoisted

# 優先使用工作空間中的包，而不是 npm registry 中的包
prefer-workspace-packages=true

# 工作空間包的版本號使用 rolling 協議
save-workspace-protocol=rolling

# 解析依賴時優先選擇最高版本
resolution-mode=highest 